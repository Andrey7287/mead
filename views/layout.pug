doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/scss/main.css")
    if showTests
      link(rel="stylesheet", href="/vendor/mocha.css")
  body
    header
      img(src="/img/logo.png", alt="logo")
      h3(hidden) test test test
      nav
        ul
          each link, name in {'home': '/', 'about': '/about?q=1', 'contacts': '/contacts', 'tdd': '/test-funcs?test=1', 'news': '/news'}
            li
              a(href=link)= name 
    main
      block content
    footer
      div.footer
        div.copyright= 'all right resived'
    if scriptForPage
      script(src="/js/test-funcs.js")
    if showTests
      div#mocha
      script(src="/vendor/mocha.js")
      script(src="/vendor/chai.js")
      script(src="/tests/tests.js")
      if pageTestScript
        script(src=`/tests/${pageTestScript}.js`)